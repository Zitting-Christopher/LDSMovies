@model CoreMVCMovie.Models.MovieGenreViewModel


@{
    ViewData["Title"] = "View all Movies";
}

<h2>@ViewData["Title"]</h2>



<form asp-controller="Movies" method="get" asp-action="Index">
    <div class="col-sm-7">
        <a class="btn btn-success" asp-action="Create">Add Movie</a>
    </div>
    <div class="col-lg-5">
        Genre: <select asp-for="movieGenre" asp-items="Model.genres">
            <option value="">All</option>
        </select>
        Filter by Title: <input type="text" name="searchString" />
        <input class="btn btn-info" type="submit" value="Filter" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.movies[0].Title)
            </th>
            <th>
                <a asp-route-sortOrder="@ViewData["ReleaseDate"]">@Html.DisplayNameFor(model => model.movies[0].ReleaseDate)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.movies[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.movies[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.movies[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.movies)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" class="btn alert-warning" asp-route-id="@item.ID">Edit</a>
                <a asp-action="Details" class="btn alert-info" asp-route-id="@item.ID">Details</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
